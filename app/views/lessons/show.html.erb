<br />

<div class="booyah-box col-10 offset-1">
	<h1><%= current_lesson.title %></h1>
  <hr class="col-8 offset-2 video">
	<p class="float-left">
		<%= current_lesson.subtitle %>
	</p>
    <!-- Next Lesson Button  -->
  <br>
  <% if current_lesson.next_lesson.present? %>
    <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-success float-right' do %>
    Next Lesson &nbsp;
    <span class="fa fa-forward"></span>
    <% end %>
  <% end %>

  <br class="clr"><br>

  <video id="my-video" class="video-js vjs-big-play-centered vjs-fluid" controls preload="auto"
  poster="<%= image_path('Black.jpg') %>" data-setup="{}">
		<source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
    <noscript>
    	<p class='vjs-no-js'>
          To view this video please enable JavaScript, and consider upgrading to a web browser that
        <a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
      </p>
    </noscript>
  </video>
  <br class="clr">
</div>